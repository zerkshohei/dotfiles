{
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        }
    },
    "yaml.schemas": {
        "https://raw.githubusercontent.com/docker/compose/master/compose/config/config_schema_v3.7.json": "docker-compose*"
    },
    "yaml.validate":true,
    "yaml.format.enable": true
}
